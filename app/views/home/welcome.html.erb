                        </div>
                      </div>

                      <div class="row control-group">
                          <div class="form-group col-xs-12 floating-label-form-group controls">
                              <%= f.text_field :email, class: "form-control input-lg", id: "email", placeholder: "youremail@gmail.com" %>
